{
  "include": ["src/**/*.ts","node_modules/angular-bootstrap-md/**/*.ts" ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "./typings.d.ts"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}


