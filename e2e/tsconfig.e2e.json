{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": false,
      "removeComments": false,
      "noImplicitAny": false,
      "outDir": "typeScript",
      "typeRoots": [ "../node_modules/@types" ],
      "types": ["node","cucumber", "chai"]
  },
  "exclude": [
      "node_modules",
      "typescript"
  ],
  "lib": [
    "es2017",
    "dom"
  ]
}